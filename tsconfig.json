{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}